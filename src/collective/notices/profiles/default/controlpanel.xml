<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.notices"
    purge="False">

    <configlet
        title="Site Notices"
        action_id="notices"
        appId="collective.notices"
        category="Products"
        condition_expr=""
        icon_expr="string:${portal_url}/++resource++collective.notices.note.png"
        url_expr="string:${portal_url}/++notices++"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>